<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_element_padding" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_marginBottom="@dimen/default_element_padding"
        android:layout_marginTop="@dimen/default_element_padding"
        android:background="@color/dark_grey" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divider"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progressBar1"
        android:layout_alignTop="@+id/progressBar1"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="@dimen/default_element_padding"
        android:layout_toRightOf="@+id/progressBar1"
        android:gravity="center_vertical|left"
        android:text="Message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>