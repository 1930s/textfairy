<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_element_padding">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ocr_accuracy"
        android:layout_alignBottom="@+id/ocr_accuracy"
        android:src="@drawable/fairy_right_arm"
        android:scaleType="center"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/accuracy_title"
        android:padding="8dp"
        android:background="@color/dark_grey"
        android:textColor="@color/primary_text_btn_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:text="@string/ocr_accuracy" />

    <TextView
        android:background="@drawable/border_background"
        android:layout_alignLeft="@+id/accuracy_title"
        android:layout_alignRight="@+id/accuracy_title"
        android:gravity="center"
        android:typeface="serif"
        android:textSize="42sp"
        android:padding="4dp"
        android:id="@+id/ocr_accuracy"
        android:layout_below="@+id/accuracy_title"
        android:layout_width="0dp"
        android:text="86%"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="@dimen/default_element_padding"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider1"
        android:background="@color/grey6"
        android:layout_below="@+id/ocr_accuracy" />

    <Button
        android:id="@+id/button_copy_to_clipboard"
        android:text="@string/copy_to_clipboard"
        android:gravity="left|center"
        android:drawablePadding="@dimen/default_padding"
        android:drawableLeft="@drawable/ic_action_content_copy_dark"
        android:layout_width="match_parent"
        android:background="@drawable/btn_start_activity2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider2"
        android:background="@color/grey6"
        android:layout_below="@+id/button_copy_to_clipboard" />

    <Button
        android:id="@+id/button_text_to_speech"
        android:text="@string/text_to_speech"
        android:gravity="left|center"
        android:drawablePadding="@dimen/default_padding"
        android:drawableLeft="@drawable/ic_action_text_to_speech"
        android:layout_width="match_parent"
        android:background="@drawable/btn_start_activity2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider3"
        android:background="@color/grey6"
        android:layout_below="@+id/button_text_to_speech" />

    <Button
        android:id="@+id/button_export_pdf"
        android:text="@string/export_as_pdf"
        android:gravity="left|center"
        android:drawablePadding="@dimen/default_padding"
        android:drawableLeft="@drawable/ic_action_pdf_light"
        android:layout_width="match_parent"
        android:background="@drawable/btn_start_activity2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"/>

</RelativeLayout>