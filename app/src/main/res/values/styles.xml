<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="contribute_bullet_point">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point_2</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="blur_warning_bullet_point">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point_2</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="contribute_action">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">left|center</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point</item>
    </style>

    <style name="ocr_tip_style">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ocr_tip_style_check" parent="ocr_tip_style">
        <item name="android:drawableLeft">@drawable/check</item>
    </style>
    <style name="ocr_tip_style_cross" parent="ocr_tip_style">
        <item name="android:drawableLeft">@drawable/cross</item>
    </style>

</resources>